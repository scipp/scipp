cmake_minimum_required(VERSION 2.8.2)

project(llnl-units-download NONE)

find_package(Git)

include(ExternalProject)

externalproject_add(
  llnl-units
  GIT_REPOSITORY https://github.com/LLNL/units.git
  GIT_TAG v0.4.0
  PATCH_COMMAND git apply "${CMAKE_CURRENT_LIST_DIR}/LLNL-namespace.patch"
  SOURCE_DIR "${CMAKE_BINARY_DIR}/llnl-units-src"
  BINARY_DIR "${CMAKE_BINARY_DIR}/llnl-units-build"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND ""
  INSTALL_COMMAND ""
  TEST_COMMAND ""
)
