{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Base options",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "OFF",
        "FULL_BUILD": "ON",
        "BENCHMARK": "ON"
      }
    },
    {
      "name": "ci-linux",
      "inherits": "base",
      "description": "Linux options for CI build (PR and Main)",
      "cacheVariables": {
        "CPPCHECK": "ON"
      }
    },
    {
      "name": "ci-macos",
      "inherits": "base",
      "description": "MacOS options for CI build (PR and Main)",
      "cacheVariables": {
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0"
      }
    },
    {
      "name": "ci-windows",
      "inherits": "base",
      "description": "Windows options for CI build (PR and Main)",
      "generator": "Ninja"
    },
    {
      "name": "windows-msbuild",
      "inherits": "base",
      "description": "Windows build using MSBuild (visual studio CMake generators)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64"
    },
    {
      "name": "package",
      "inherits": "base",
      "description": "Package build base options",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "$env{PREFIX}",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
        "BENCHMARK": "OFF"
      }
    },
    {
      "name": "package-linux-64",
      "inherits": "package",
      "description": "Linux options for package build for x86_64"
    },
    {
      "name": "package-osx-64",
      "inherits": "package",
      "description": "MacOS options for package build for x86_64",
      "cacheVariables": {
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0",
        "CMAKE_OSX_ARCHITECTURES": "x86_64"
      }
    },
    {
      "name": "package-osx-arm64",
      "inherits": "package",
      "description": "MacOS options for package build for arm64",
      "cacheVariables": {
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0",
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "package-win-64",
      "inherits": "package",
      "description": "Windows options for package build",
      "generator": "Visual Studio 16 2019"
    },
    {
      "name": "debug",
      "description": "Options for debug build",
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "OFF",
        "THREADING": "OFF"
      }
    },
    {
      "name": "coverage",
      "inherits": "debug",
      "description": "Options for coverage build (Linux only)",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "COVERAGE": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "docs",
      "configurePreset": "base",
      "configuration": "Release",
      "targets": [
        "docs",
        "doctest",
        "cleanup_docs_html"
      ]
    },
    {
      "name": "package-docs",
      "inherits": "docs",
      "targets": [
        "docs",
        "doctest",
        "linkcheck",
        "cleanup_docs_html"
      ]
    },
    {
      "name": "build",
      "configurePreset": "base",
      "configuration": "Release",
      "targets": [
        "install"
      ]
    },
    {
      "name": "build-debug",
      "configurePreset": "debug",
      "configuration": "Debug",
      "targets": [
        "install"
      ]
    },
    {
      "name": "coverage",
      "configurePreset": "coverage",
      "targets": [
        "coverage"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "test",
      "configurePreset": "base",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug-test",
      "configurePreset": "debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
